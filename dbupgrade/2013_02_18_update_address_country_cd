UPDATE CLW_ADDRESS A SET COUNTRY_CD = (SELECT SHORT_DESC FROM CLW_COUNTRY B WHERE A.COUNTRY_CD=B.COUNTRY_CODE)
WHERE LENGTH(COUNTRY_CD)= 2 
AND EXISTS (SELECT COUNTRY_CODE FROM CLW_COUNTRY B WHERE A.COUNTRY_CD=B.COUNTRY_CODE);

UPDATE CLW_ADDRESS A SET COUNTRY_CD = (SELECT SHORT_DESC FROM CLW_COUNTRY B WHERE A.COUNTRY_CD=B.COUNTRY_CODE)
WHERE COUNTRY_CD='XXPO';

UPDATE CLW_ADDRESS A SET COUNTRY_CD = (SELECT SHORT_DESC FROM CLW_COUNTRY B WHERE A.COUNTRY_CD=B.UI_NAME)
WHERE EXISTS (SELECT COUNTRY_CODE FROM CLW_COUNTRY B WHERE A.COUNTRY_CD=B.UI_NAME);

commit;